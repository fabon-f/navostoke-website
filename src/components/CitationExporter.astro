---
import { Temporal } from 'temporal-polyfill'

export type Props = {
  bookId: string,
  author?: string,
  title: string,
  publisher?: string,
  bookUrl: string | URL,
  publishDate: string,
  series?: string,
  number?: string
};

const props = Astro.props;
const date = (typeof props.publishDate === 'string' ? Temporal.PlainDate.from(props.publishDate) : props.publishDate)

const bibtexCitation = `@book { navostoke-${props.bookId},
author = "${props.author || "ふぁぼん"}",
title = "${props.title}",
${props.series ? `series = "${props.series}",` : ""}
${props.number ? `number = "${props.number}",` : ""}
publisher = "${props.publisher || "ナヴァストーケ"}",
year = "${date.year}",
URL = "${props.bookUrl}"
}`.replace(/\n+/g, "\n");
---

<details id="citation-exporter">
  <summary>書誌情報のエクスポート (BibTeX)</summary>
  <textarea readonly>{bibtexCitation}</textarea>
</details>

<style>
  textarea {
    height: 7em;
    width: 50em;
    max-width: 90%;
  }
</style>
